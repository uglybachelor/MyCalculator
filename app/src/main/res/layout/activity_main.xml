<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.a.zzh.mycalculator.MainActivity"
    android:orientation="horizontal">




    <EditText
        android:background="@drawable/display"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/editText"
        android:editable="false"
        android:gravity="end"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:id="@+id/LL1"
        android:layout_below="@+id/editText"
        >
        <Button
            android:id="@+id/bt_C"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="C"
            android:textSize="20sp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/bt_DEL"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="DEL"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/bt_Divide"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="/"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/bt_Multiply"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="*"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:id="@+id/LL2"
        android:layout_below="@+id/LL1"
        >
        <Button
            android:id="@+id/bt_7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="20sp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/bt_8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/bt_9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/bt_Minus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="-"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:id="@+id/LL3"
        android:layout_below="@+id/LL2"
        >
        <Button
            android:id="@+id/bt_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="4"
            android:textSize="20sp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/bt_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/bt_6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="6"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/bt_Plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/regularbutton"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:id="@+id/LL4"
        android:layout_below="@+id/LL3"
        >

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/bt_1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:background="@drawable/regularbutton"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/bt_2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="2"
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/regularbutton"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/bt_3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="3"
                    android:textSize="20sp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/regularbutton"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/bt_0"
                    android:layout_width="155dp"
                    android:layout_height="70dp"
                    android:text="0"
                    android:textSize="20sp"
                    android:background="@drawable/regularbutton"
                    android:textColor="@color/colorPrimaryDark" />

                <Button
                    android:id="@+id/bt_dot"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:text="."
                    android:textSize="20sp"
                    android:background="@drawable/regularbutton"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_Equal"
            android:layout_width="70dp"
            android:layout_height="155dp"
            android:text="="
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/equalbutton"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>



</RelativeLayout>
